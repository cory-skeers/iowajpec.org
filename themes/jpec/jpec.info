name        = JPEC
description = A theme based on Radix.
screenshot  = screenshot.png
core        = 7.x

; Base - Radix
base theme  = radix


; Regions
regions[navigation] = Navigation
regions[content] = Content

; Breakpoints
radix_breakpoints[xs] = (max-width: 767px)
radix_breakpoints[sm] = (min-width: 768px) and (max-width: 991px)
radix_breakpoints[md] = (min-width: 992px) and (max-width: 1199px)
radix_breakpoints[lg] = (min-width: 1200px)

; Panels
plugins[panels][layouts] = panels/layouts
plugins[panels][styles] = panels/styles

; CSS - General
stylesheets[all][]     = assets/css/jpec.style.css

; Javascript
scripts[] = assets/js/jpec.script.js
